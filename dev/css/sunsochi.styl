			justify-content flex-start
			align-items center
			flex-wrap wrap

			.apartment-type
				margin-right 40px
				margin-bottom 30px

				.apartment-type-text
					display inline-block
					vertical-align middle

					color $colorGray

				.apartment-type-count
					display inline-block
					vertical-align middle
					font-family "ProximaNovaSemibold"

		.apartment-type-badge
			display inline-block
			width 25px
			height 25px

			margin-right 10px

			border-radius 50%

			vertical-align middle

			&--gray
				background $colorGray

			&--yellow
				background #ffe200

			&--green
				background #41aa33

			&--orange
				background $colorOrange


		.apartment-table
			position relative
			max-height 800px
			overflow hidden
			overflow-y auto

			table
				.apartment-type-badge
					width 20px
					height 20px

				tr
					cursor pointer

					th
						position relative

						.tablesorter-header-inner
							position relative

							&:after
								content ""

								position absolute
								top -2px
								margin-left 5px

								display inline-block
								width 10px
								height 21px
								background-image url("../svg/arrow_table.svg")
								background-size contain
								background-repeat no-repeat

								transition transform 0.3s $transitionAnimation


						&.tablesorter-headerAsc
							.tablesorter-header-inner
								&:after
									content ""
									background-image url("../svg/arrow_table.svg")
									background-size contain
									background-repeat no-repeat

						&.tablesorter-headerDesc
							.tablesorter-header-inner
								&:after
									content ""
									transform rotate(-180deg)

						&:first-child
							.tablesorter-header-inner
								&:after
									content none

					td
						min-width 85px
						transition background-color 0.3s $transitionAnimation

					&:hover
						td
							background-color $colorLightBlue


/*** //apartment ***/


/*** preloader ***/
@-webkit-keyframes pulse
	0%
		-webkit-box-shadow: 0 0 0 0 rgba(#f99d22, 0.8)
	70%
		-webkit-box-shadow: 0 0 0 25px rgba(#f99d22, 0)
	100%
		-webkit-box-shadow: 0 0 0 0 rgba(#f99d22, 0)
@keyframes pulse
	0%
		-moz-box-shadow: 0 0 0 0 rgba(#f99d22, 0.8)
		box-shadow: 0 0 0 0 rgba(#f99d22, 0.8)

	70%
		-moz-box-shadow: 0 0 0 25px rgba(#f99d22, 0)
		box-shadow: 0 0 0 25px rgba(#f99d22, 0)
	100%
		-moz-box-shadow: 0 0 0 0 rgba(#f99d22, 0)
		box-shadow: 0 0 0 0 rgba(#f99d22, 0)

.for-preloader
	&.preloader-active
		.preloader-bcg
			background #fff

	&.preloader-destroy
		.preloader-bcg
			opacity 0
			z-index -1

.preloader-active
	position relative

.preloader-bcg
	position absolute
	top 0
	left 0
	right 0
	bottom 0

	display block
	width 100%
	height 100%

	z-index 10

	transition all 0.3s $transitionAnimation

	.preloader-container
		position absolute
		top 50%
		left 50%

		display block
		width 88px
		height 88px

		padding 10px
		box-sizing border-box

		transform translate(-50%,-50%)

		background $colorBlue
		opacity 0.8

		border-radius 50%
		text-align center

		box-shadow: 0 0 0 rgba(#f99d22, 0.4)

		animation pulse 1.5s infinite

		z-index -1

		&:hover
			animation none

		img
			position relative
			left 50%

			display block
			width 100%
			height 100%


			transform translateX(-50%)

			z-index 100
/*** //preloader ***/


/*** tooltip apartment ***/

.tooltip-container
	display none
	padding 25px 25px 30px 25px
	box-sizing border-box

	.tooltip-apartment-title
		margin-bottom 20px
		font-size 18px

	.tooltip-apartment-id
		margin-bottom 25px
		font-size 18px

	.tooltip-apartment-holder
		display flex
		align-items center
		justify-content space-between
		max-width 200px
		min-height 300px

		margin 0 auto 25px auto
		text-align center

	.tooltip-apartment-img
		display block
		width 100%
		height 100%

		object-fit cover

	.tooltip-apartment-icon
		display inline-block
		max-width 20px
		vertical-align middle

		margin-right 20px
		transition transform 0.3s $transitionAnimation

		will-change transform

		svg
			display block
			width 100%

			path
				transition fill 0.3s $transitionAnimation
				stroke-width 8

		&:hover
			transform scale(1.2)
			svg
				path
					fill $colorOrange

	.tooltip-apartment-button
		display inline-block
		vertical-align middle

.tooltipster-sidetip.tooltipster-noir.tooltipster-noir-customized .tooltipster-box
	border 1px solid $colorLightGray
	background #fff
	box-shadow 5px 5px 10px -5px #000
	border-radius 0

.tooltipster-sidetip.tooltipster-noir.tooltipster-noir-customized .tooltipster-content
	min-width 350px
	padding 0
	overflow hidden
	line-height inherit

	color #000

	.tooltip-container
		display block
		.form
			margin-top 0

	.tooltip-apartment-empty
		display block
		width 100%
		padding 20px
		box-sizing border-box

		font-size 18px

		text-align center

/*** //tooltip apartment ***/


/*** apartment grid ***/

.apartment-structure
	margin-top 40px

.apartment-structure-item
	padding 30px 0
	box-sizing border-box
	border-top 1px solid $colorLightGray

	&:last-child
		border-bottom 1px solid $colorLightGray

	.apartment-structure-name
		display inline-block
		width 19%

		vertical-align top
		font-family "ProximaNovaSemibold"

.apartment-structure-grid
	position relative
	display inline-block
	vertical-align top
	width 80%

.apartment-structure-floor
	position absolute
	top 50%
	left 0
	display block

	vertical-align middle

	transform rotate(-90deg) translateY(-50%)

	text-align left

.apartment-structure-grid-container-list
	display grid
	grid-gap 5px
	padding-left 50px
	box-sizing border-box

	.apartment-structure-floor-number
		position relative
		display inline-block
		padding 10px 20px
		box-sizing border-box

		text-align center

		z-index 10

	.apartment-structure-grid-cell
		position relative
		display inline-block
		padding 10px

		cursor pointer

		z-index 10

		opacity 0
		transform translateY(-20px)

		transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

		&.show
			opacity 1
			transform translateY(0px)

		&:hover
			opacity 0.4



	.apartment-structure-grid-cell-text
		display flex
		justify-content flex-start

.apartment-structure-grid-container-floors
	position absolute
	top 0
	left 0
	bottom 0
	right 0

	display block
	padding-left 40px
	box-sizing border-box

	.apartment-structure-grid-container-floors-item
		display flex
		justify-content flex-end
		align-items center
		width 100%

		height 35px
		margin-bottom 5px

		transition background 0.3s $transitionAnimation

		cursor pointer

		&:last-child
			margin-bottom 0

		&:hover
			background $colorLightBlue

	.apartment-structure-grid-container-floors-link
		display block
		width auto
		margin-right 15px

		font-size 16px

		color $colorBlue

