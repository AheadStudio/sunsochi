/*** Settings ***/
@import "nib"
@import "../lib/css/css"

global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal

$transitionAnimation = cubic-bezier(0.250, 0.460, 0.450, 0.940)

$colorDarkGray = #3a4347
$colorGray = #9b9b9b
$colorLightBlue = #f7f8fb
$colorLightGray = #e3e3e3
$colorTurquoise = #e1e8eb
$colorLightBlack = #2C2F2F
$colorOrange = #f99d22
$colorRed = #f01624
$colorBlue = #009ecc

/* fonts */
@font-face
	font-family "ProximaNovaBlack"
	src url("../fonts/ProximaNova-Black.woff") format("woff")

@font-face
	font-family "ProximaNovaLight"
	src url("../fonts/ProximaNova-Light.woff") format("woff")

@font-face
	font-family "ProximaNovaRegular"
	src url("../fonts/ProximaNova-Regular.woff") format("woff")

@font-face
	font-family "ProximaNovaSemibold"
	src url("../fonts/ProximaNova-Semibold.woff") format("woff")

@font-face
	font-family "ProximaNovaBold"
	src url("../fonts/ProximaNova-Bold.woff") format("woff")
/* //fonts */


html
	height 100%
body
	position relative
	width 100%
	height 100%
	min-height 100vh
	line-height 1
	cursor default
	font-family "ProximaNovaRegular"

	color $colorLightBlack

/*** //Settings ***/

/*** main style ***/
.page
	display block
	width 100%

	min-height 100%

	margin 0 auto

.page-inner
	position relative
	display block
	margin 0 auto
	box-sizing border-box

	&--w1
		max-width 1000px
		padding 0 20px

	&--w2
		max-width 810px
		padding 0 20px

	&--w3
		max-width 750px
		padding 0 20px

	&--w4
		max-width 655px
		padding 0 20px

	&--max
		max-width 100%

/** header **/
.page-header
	width 100%

.header-row-items
	display flex
	justify-content  space-between
	align-items center

.header-row--top
	width 100%
	margin-bottom 45px
	background-color $colorDarkGray

.header-top
	padding 15px 0

	.header-top-item-holder
		display inline-block
		margin-right 40px

		&:last-child
			margin-right 0

		.header-top-item
			font-size 14px
			font-family "ProximaNovaSemibold"

.header-logo
	display flex
	max-width 460px

	.header-logo-img
		display inline-block
		margin-right 20px
		float left
		max-width 215px
		width 100%

		svg
			display block
			width 100%

	.header-logo-title
		display block
		width 50%
		padding-top 4px
		vertical-align top

		box-sizing border-box

		font-size 14px

	&.header-logo--mini
		display none
		width 25px

		margin-right 0
		height 100%

		.header-logo-img
			width 100%

.header-mobile
	.header-mobile-title
		display block
		margin-bottom 10px

		font-size 14px
		color $colorBlue

	.header-mobile-item
		display block

		font-size 22px
		font-family "ProximaNovaBold"

		color $colorBlue

		white-space nowrap

.header-row-items
	.header-call
		padding 15px 25px
		font-size 14px
		max-height 47px


.header-row--middle
	margin-bottom 20px

.header-bottom-inner
	.header-bottom-item-holder
		display inline-block
		margin-right 35px

		&:last-child
			margin-right 0

		.header-bottom-item
			font-size 16px

			font-family "ProximaNovaSemibold"

.header-favorites
	display flex
	align-items center

	.header-favorites-holder
		display block
		width 25px
		height 25px

		svg
			display block
			width 100%

			path
				transition fill 0.3s $transitionAnimation

		&:hover
			svg
				path
					fill $colorOrange

	.header-favorites-count
		padding-left 10px
		box-sizing border-box
		font-size 15px
		font-family "ProximaNovaSemibold"

		color $colorLightBlack

.header-row--bottom
	padding 15px 0
	border-top 2px solid $colorLightBlue

.fixed-header
	.header-row--middle
		margin-bottom 78px

	.header-row--bottom
		position fixed
		top 0
		left 0
		right 0

		width 100%
		padding 10px 0

		background #fff
		border-bottom 3px solid $colorLightGray

		opacity 0
		transform translateY(-100px)
		transition transform 0.3s $transitionAnimation

		z-index 1000

		.header-logo
			&.header-logo--mini
				display block

	&.fixed-header--show
		.header-row--bottom
			opacity 1
			transform translateY(0)
/** //header **/

/** footer **/

.page-footer
	background $colorDarkGray
	padding 55px 70px 40px 70px

.footer-row
	display flex
	justify-content space-between
	align-items center

	&--top
		margin-bottom 25px

	&--bottom
		margin-top 70px

.footer-top-item-holder
	display inline-block
	margin-right 20px

	&:last-child
		margin-right 0

	.footer-top-item
		font-size 16px
		font-family "ProximaNovaSemibold"

.footer-next-item-holder
	display inline-block
	margin-right 30px

	&:last-child
		margin-right 0

	.footer-next-item
		font-size 15px

.footer-info
	.footer-info-private
		display block
		margin-bottom 10px
		padding-bottom 1px
		color $colorOrange

		border-bottom 1px solid transparent
		transition border-bottom-color 0.3s $transitionAnimation

		font-size 15px

		&:hover
			border-bottom-color $colorOrange

	.footer-info-name
		display block
		margin-bottom 10px

		font-size 15px

		color #fff

	.footer-creators
		.footer-creators-title
			margin-right 5px
			color #fff
			font-size 15px
		.footer-creators-name
			color $colorOrange
			font-size 15px
			border-bottom 1px solid transparent
			transition border-bottom-color 0.3s $transitionAnimation
		&:hover
			.footer-creators-name
				border-bottom-color $colorOrange

.footer-social
	display grid
	grid-template-columns 1fr 1fr 1fr 1fr
	grid-gap 0 20px

	&:hover
		.footer-social-item
			svg
				display block
				width 100%

				path[fill="#fff"]
					fill-opacity 0.5

	.footer-social-item
		display block
		width 25px
		height 25px

		border-radius 7px
		overflow hidden

		cursor pointer

		transition opacity 0.3s $transitionAnimation

		svg
			display block
			width 100%
			path[fill="#fff"]
				fill-opacity 1
				transition fill 0.3s $transitionAnimation, fill-opacity 0.3s $transitionAnimation

		&:hover
			svg
				path[fill="#fff"]
					fill #fff
					fill-opacity 1

.page-text
	font-size 16px
	font-family "ProximaNovaRegular"

	h2
		display block
		text-align center

		font-family "ProximaNovaSemibold"
		font-size 24px

		line-height 54px

		color$colorLightBlack

	h3
		font-size 16px
		font-family "ProximaNovaSemibold"
	dl
		display grid
		grid-template-columns 1fr 1fr
		grid-gap 20px 0
		overflow hidden

		dt
			position relative
			font-size 15px

		dd
			font-size 15px
			font-family "ProximaNovaSemibold"
			color #4a494a
			text-align right

		&.dark
			dd
			dt
				color $colorLightBlack

				&.title
					font-family "ProximaNovaSemibold"
					margin-bottom 30px
	p
		line-height 22px
		margin-bottom 30px

		font-size 18px
		font-family "ProximaNovaRegular"

		&:last-child
			margin-bottom 0

	.border-text
		box-sizing border-box

		&--full
			border-top 1px solid #d0d0d0
			padding 30px 0 30px 0
			border-bottom 1px solid #d0d0d0

		&--bottom
			padding 0 0 30px 0
			border-bottom 1px solid #d0d0d0

	sup
		font-size 12px
		vertical-align top

	table
		width 100%

		thead
			tr
				th
					padding 17px 0 15px 0
					box-sizing border-box
					background-color #e1e8eb
					border-bottom 2px solid #d0d0d0

					font-family "ProximaNovaSemibold"

					color #000
		tr
			width 100%

			td
				padding 25px 0
				box-sizing border-box

				border-bottom 1px solid $colorLightGray

				color #000
				font-size 18px

				&:first-child
					padding-left 5px

				&:last-child
					padding-left 10px

			&.not-active
				opacity 0.4
/** //footer **/

/** button and link **/
.link
	text-decoration none

.link-white
	color #fff

.link-black
	color $colorLightBlack

.link-blue
	color $colorBlue

.link-orange
	color $colorOrange

.link--orange
	transition color 0.3s $transitionAnimation

	&:hover
		color $colorOrange

.link--opacity
	transition opacity 0.3s $transitionAnimation
	&:hover
		opacity 0.8

.link-blue--bottom
	border-bottom 1px solid transparent
	transition border-bottom-color 0.3s $transitionAnimation

	&:hover
		border-bottom-color $colorBlue

.link-black--bottom
	border-bottom 1px solid $colorLightBlack
	transition border-bottom-color 0.3s $transitionAnimation

	&:hover
		border-bottom-color transparent

.link-orange--bottom
	border-bottom 1px solid transparent
	transition border-bottom-color 0.3s $transitionAnimation

	&:hover
		border-bottom-color $colorOrange

.link-white--bottom
	border-bottom 1px solid #fff
	transition border-bottom-color 0.3s $transitionAnimation

	&:hover
		border-bottom-color transparent

.button
	display block
	padding 10px 15px
	box-sizing border-box

	border-radius 45px

	border 2px solid

.button--orange
	border-color $colorOrange
	color $colorOrange
	line-height 1

	transition color 0.3s $transitionAnimation, border-color 0.3s $transitionAnimation, background 0.3s $transitionAnimation

	&:hover
		background $colorOrange
		color #fff

.button--orange-reverse
	border-color $colorOrange
	background $colorOrange
	color #fff
	line-height 1

	transition color 0.3s $transitionAnimation, border-color 0.3s $transitionAnimation, background 0.3s $transitionAnimation

	&:hover
		background #ffffff
		color $colorOrange

.button--blue
	border-color $colorBlue
	color $colorBlue
	line-height 1

	transition color 0.3s $transitionAnimation, border-color 0.3s $transitionAnimation, background 0.3s $transitionAnimation

	&:hover
		background $colorBlue
		color #fff

.button--white
	border-color #fff
	color #fff
	line-height 1

	transition color 0.3s $transitionAnimation, border-color 0.3s $transitionAnimation, background 0.3s $transitionAnimation

	&:hover
		background #fff
		color $colorOrange

.button--orange-flood
	background $colorOrange
	color #fff
	line-height 1

	transition box-shadow 0.3s $transitionAnimation
	border-color $colorOrange

	&:hover
		box-shadow 0px 5px 15px -5px rgba(0,0,0,0.75)

/*** main style ***/

/*** block intro ***/
.intro
	position relative
	width 100%
	margin-bottom 35px

	&:after
		content ""
		position absolute
		top 0
		left 0
		right 0
		bottom 0

		background-color rgba(0, 0, 0, 0.5)
		z-index 1

	.intro-img
		position absolute
		left 0
		top 0
		right 0
		bottom 0

		display block
		width 100%
		height 100%

		z-index -1

		object-fit cover
		object-position bottom

	.intro-text
		position relative
		top 0
		bottom 0

		max-width 850px
		margin 0 auto

		padding 110px 0
		box-sizing border-box

		text-align center

		font-size 50px
		font-family "ProximaNovaBold"
		line-height 60px

		color #fff

		z-index 10

	.intro-advantages
		position relative
		left 50%

		display flex
		justify-content space-between

		transform translateX(-50%)
		max-width 870px

		margin-top -50px
		padding-bottom 130px

		z-index 10

		.intro-advantages-item
			display flex
			justify-content flex-start
			width 30%

			margin-right 3%

			&:last-child
				margin-right 0

			.intro-advantages-icon
				display inline-block
				width 25px

				margin-right 20px

				vertical-align top

				svg
					display block
					width 100%

					path
						fill #fff

			.intro-advantages-text
				display inline-block
				font-size 20px
				font-family "ProximaNovaSemibold"

				color #fff

				sup
					vertical-align top
					font-size 14px
/*** //block intro ***/


/*** block filter home ***/
.filter
	position relative

	margin-top 10px
	margin-bottom 35px

	.filter-tabs
		padding-top 25px

		border-top 1px solid $colorTurquoise

		&--center
			text-align center

	.filter-clear
		position absolute
		right 0
		top -40px

		color #9B9A9B

		font-family "ProximaNovaSemibold"
		font-size 12px

		&.active
			color #F89C21

.filter-tabs
	margin-bottom 30px

	.filter-tab
		display inline-block
		margin-right 15px

		padding 13px 20px
		box-sizing border-box

		border 1px solid $colorLightGray
		border-radius 100px

		font-family "ProximaNovaSemibold"
		font-size 15px

		cursor pointer

		transition border-color 0.3s $transitionAnimation, background 0.3s $transitionAnimation, color 0.3s $transitionAnimation

		&:hover
			border-color $colorBlue
			color $colorBlue

		&.active-tab
			border-color $colorBlue
			background $colorBlue
			color #fff

			&:hover
				background #fff
				color $colorBlue

		&:last-child
			margin-right 0

.filter-list
	.filter-item
		transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

		&.hide-block
			display none

		&.hide
			transform translateY(10px)
			opacity 0

.form-filter
	.filter-submit
		margin 30px auto 0 auto

		font-size 18px
		padding 13px 30px

	.filter-selected-regions-list
		display flex
		justify-content flex-start
		align-items center
		flex-wrap wrap
		border-bottom 1px solid $colorTurquoise

		.filter-selected-regions-item
			position relative
			display block
			margin-bottom 20px
			margin-right 20px

			padding 13px 20px
			box-sizing border-box

			border-radius 50px

			background #f6f7fa

			cursor pointer

			.form-item--checkbox
				display none
				opacity 0

			.selected-regions-item-text
				font-size 14px
				padding-right 25px

			.selected-regions-item-close
				position absolute
				right 15px
				top 15px
				display block
				width 13px
				height 13px

				svg
					display block
					width 100%

					path
						transition fill 0.3s $transitionAnimation

				&:hover
					svg
						path
							fill $colorLightBlack

.form
	margin-top 35px

	.form-row
		display flex
		justify-content space-between

		margin-bottom 35px

		&-100
			width 100%
		&-50
			width 48%

		.form-holder
			position relative
			display inline-block
			width 100%


		.form-item-title
			margin-bottom 15px

		.form-item
			display block
			width 100%

			padding 13px 17px
			box-sizing border-box

			border 1px solid $colorLightGray

			border-radius 3px
			font-size 16px
			background #fff

			transition background 0.3s $transitionAnimation

			&:hover
				background $colorLightGray

			&--hidden
				position absolute
				opacity 0

		.form-filter-search
			position absolute
			top 10px
			right 13px

			display block
			width 27px
			height 27px

			.form-filter-search-icon
				display block
				width 100%

				transition transform 0.3s $transitionAnimation

				svg
					display block
					width 100%

					path
						fill $colorLightBlack

			&:hover
				.form-filter-search-icon
					transform rotate(15deg)

.form-label
	display inline-block
	margin-right 25px

	cursor pointer

	&:last-child
		margin-right 0

	input
		position absolute
		left 0
		top 0

		display block
		width 100%
		height 100%

	.jcf-checkbox
		position relative
		display inline-block
		width 30px
		height 30px

		vertical-align middle

		border 1px solid #d0d0d0
		margin-right 10px


		span
			position absolute
			top 5.7px
			left 4.9px

			display block
			width 22px
			height 22px

			background-image url("../svg/check_blue.svg")
			background-repeat no-repeat
			background-size contain

			transform translateY(5px)
			opacity 0

			transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

		&.jcf-checked
			span
				opacity 1
				transform translateY(0)

	.form-item-checkbox-title
		font-family "ProximaNovaSemibold"

.checkbox-list-container
	display inline-block
	margin-right 25px
	vertical-align middle

	.checkbox-list-container-title
		display inline-block
		margin-right 30px

	.form-label
		position relative
		margin-right 15px

		.jcf-checkbox
			position absolute
			top 0
			left 0
			width 100%
			height 100%

			border-radius 100px
			box-sizing border-box

			transition border-color 0.3s $transitionAnimation, background 0.3s $transitionAnimation, color 0.3s $transitionAnimation

			span
				display none

			&:hover
				border-color $colorBlue

		.form-item-checkbox-title
			position relative
			display block
			padding 10px 25px

			transition color 0.3s $transitionAnimation

			z-index 10

		&.jcf-label-active
			.jcf-checkbox
				&.jcf-checked
					border-color $colorBlue
					background $colorBlue

			.form-item-checkbox-title
				color #fff

.form
	.jcf-range
		display block
		width 100%
		height 100%

	.jcf-range-wrapper
		position relative
		display block

		.jcf-range-display-wrapper
			display block
			width 100%
			height 100%

		.jcf-range-display
			position absolute
			top 7px

			display block
			height 3px
			background-color $colorBlue

			z-index 20

	.jcf-range-track
		position relative
		left 0
		display block

		width 100%
		height 45px

		&:after
			content ""
			position absolute
			top 7px
			display block
			width 100%
			height 3px

			background-color $colorLightGray

			z-index 10

		.jcf-range-handle
			position absolute

			display block
			width 15px
			height 15px

			border-radius 50%

			background-color $colorBlue

			cursor pointer

			z-index 30

			box-shadow 0px 0px 0px 7px rgba(#009ecc, 0.70)

			.jcf-range-count
				position absolute
				top 30px

				display block
				width 100%
				height 15px

				text-align center

				font-size 16px

				.jcf-range-count-number
					position absolute
					left 50%

					display block
					width max-content

					text-align center

					transform translateX(-40%)

					&.left
						left -7px
						transform translateX(0)

					&.right
						left auto
						right -7px
						transform translateX(0)

					svg
						position absolute
						top 2px
						width 9px
				sup
					vertical-align top
					font-size 10px

	.jcf-select-form-item--select
		position relative
		display block
		width 100%

		padding 13px 17px
		box-sizing border-box

		border 1px solid $colorLightGray

		border-radius 3px
		font-size 18px
		font-family "ProximaNovaSemibold"

		background #fff

		cursor pointer
		transition background 0.3s $transitionAnimation

		.jcf-select-opener
			position: absolute
			top 54%
			right: 17px

			display block
			width 20px
			height 11px

			background-image url(../svg/arrow_bottom.svg)

			background-size contain
			background-repeat no-repeat

			transform translateY(-50%)
			transition background-image 0.3s $transitionAnimation

		&:hover
			background $colorLightGray

.regions-container
	position relative
	width auto
	max-width 690px
	margin 0 auto
	display block
	padding 55px 70px 40px 70px

	background #fff
	box-shadow 0px 0px 27px -1px rgba(158, 158, 158, 0.3)
	z-index 100

	.regions-container-list
		ul
			display grid
			grid-template-columns 1fr 1fr 1fr
			grid-gap 20px 80px

			li
				position relative
				box-sizing border-box

				cursor pointer

				.regions-text
					position relative
					display block
					padding 10px 35px 10px 15px
					box-sizing border-box

					border-radius 50px
					background #fff
					color #000

					transition background 0.3s $transitionAnimation, color 0.3s $transitionAnimation


				.regions-close
					position absolute
					right 15px
					top 11.5px

					display block
					width 13px
					height 13px

					background-image url("../svg/close_white.svg")
					background-size contain

					z-index 10
				&.select
					span
						background $colorBlue
						color #fff

	.regions-container-close
		position absolute
		top 20px
		right 20px

		display block
		width 20px
		height 20px

		svg
			display block
			width 100%

			path
				transition fill 0.3s $transitionAnimation

		&:hover
			svg
				path
					fill $colorLightBlack

.mfp-bg
	background transparent
	opacity 0

.mfp-fade
	.mfp-content
		opacity 0
		transform translateY(-30px)
		transition all 0.3s $transitionAnimation

	&.mfp-wrap
		&.mfp-ready
			.mfp-content
				opacity 1
				transform translateY(0)


		&.mfp-removing
			.mfp-content
				opacity 0
				transform translateY(-30px)

/*** //block filter home ***/

/*** block offers ***/

.section-shadow
	padding-top 55px
	padding-bottom 80px
	box-sizing border-box

	box-shadow inset 0px 15px 70px -10px rgba(#d2d2d2, 0.85)

	background $colorLightBlue

.offers-list
	display grid
	grid-template-columns repeat(3, minmax(290px, 1fr))
	grid-gap 30px 35px

	margin-top 50px

.offers-item
	position relative
	height max-content
	color $colorLightBlack
	transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation
	&:before
		content ""
		position absolute
		top 0
		left 0
		right 0
		bottom 0

		display block
